def loadstore_tparams(baseaddr, extras=()):
    #   Not all parameters are used by all tests.
    return {
        'argnames':     '        addr, offset,  arg, N, Z',
        'argvalues': (  ( baseaddr+0,       3, 0x01, 0, 0),
                        ( baseaddr+2,       0, 0x00, 0, 1),
                        ( baseaddr+4,    0x80, 0xEA, 1, 0),
                     ) + tuple(extras),
        'ids': tmc_tid,
    }

