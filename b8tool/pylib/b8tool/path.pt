from    b8tool.path  import *
from    os.path  import abspath

def test_pretty():
    assert '/ff/bar' == pretty('/ff/bar')
    assert 'foo/bar' == pretty('foo/bar')
    assert 'foo/bar' == pretty(proj('foo/bar'))

def test_b8home_path_is_absolute():
    p = str(b8home('test'))
    assert abspath(p) == p
